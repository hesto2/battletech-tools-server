{
  "name": "battletech-tools-servier",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "watch": "npm cross-env OVERRIDES=false NODE-ENV=development nodemon -e ts --exec ts-node ./src/local.ts",
    "test": "jest",
    "prebuild": "rm -rf ./dist/; mkdir ./dist",
    "build": "tsc && cp package.json ./dist && cd ./dist && npm install --omit=dev && cd ../",
    "postbuild": "cp -r ./src/static ./dist/static",
    "predeploy": "cd ./dist && npm install --prod && zip -q -r ../terraform/deploy.zip ./",
    "deploy": "cd ./terraform && npm install && terraform init && terraform apply -auto-approve",
    "start": "ts-node ./src/local.ts"
  },
  "hooks": {
    "pre-commit": "pretty-quick --staged"
  },
  "dependencies": {
    "@hesto2/express-utils": "^0.0.4",
    "aws-sdk": "^2.681.0",
    "aws-serverless-express": "^3.3.8",
    "axios": "^0.19.2",
    "cors": "^2.8.5",
    "date-fns": "^2.14.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "form-data": "^3.0.1",
    "google-auth-library": "^9.15.1",
    "googleapis": "^144.0.0",
    "lodash": "^4.17.21",
    "querystring": "^0.2.0",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@hesto2/config": "^0.0.36",
    "@types/aws-lambda": "^8.10.51",
    "@types/aws-serverless-express": "^3.3.3",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.0",
    "@types/lodash": "^4.17.7",
    "@types/uuid": "^8.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "jest": "^29.7.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
